<table cellspacing="10">
  <tr>
    <td><b>Email:</b> <%= @contact.email %></td>
    <td><b>ID:</b><%= @contact.user %></td>
    <td><%= link_to "Excluir", contact_path(@contact.email), method: :delete %></td>
  </td>
</table>

<h2>Acessos</h2>

<table cellspacing="10">
<% @contact_accesses.all.each do |access| %>
  <tr>
    <% if access.url.split('/').size == 1 %>
        <td><%= link_to "HOME", access_path(access.id) %></td>
    <% else %>
        <td><%= link_to access.url.split('/').last.upcase, access_path(access.id) %></td>
    <% end %>
  </tr>
<% end %>
</table>
<% if @contact_accesses.all.size == 0 %>
  <em>Nenhum acesso encontrado!</em>
<% end %>
